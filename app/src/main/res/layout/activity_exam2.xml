<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.adhdriver.work.ui.activity.driver.ExamActivity"
android:background="@color/bg_all"
android:orientation="vertical"
    >


<!--title-->

<include
    android:id="@+id/include_title_exam"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    layout="@layout/title_bar_in_common_activity_right_img"/>





<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:paddingBottom="30dp">


    <!--题目相关-->

    <LinearLayout
        android:id="@+id/ll_question_and_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!--第一题-->


        <!--<TextView-->
        <!--android:id="@+id/tv_exam_title"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:lineSpacingExtra="3dp"-->
        <!--android:text="@string/test_wenzi3"-->
        <!--android:textColor="@color/black" />-->




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/tv_exam_title_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:text="1."
                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tv_exam_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:text="..."
                android:textColor="@color/black" />



        </LinearLayout>



        <RadioGroup
            android:id="@+id/rg_all_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >

            <RadioButton
                android:id="@+id/rb_A"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:button="@null"
                android:background="@null"
                android:drawableLeft="@drawable/button_select_in_exam"
                android:drawablePadding="5dp"
                android:text="..."
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/rb_B"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:button="@null"
                android:background="@null"
                android:drawableLeft="@drawable/button_select_in_exam"
                android:drawablePadding="5dp"
                android:text="..."
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                />
            <RadioButton
                android:id="@+id/rb_C"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:button="@null"
                android:background="@null"
                android:drawableLeft="@drawable/button_select_in_exam"
                android:drawablePadding="5dp"
                android:text="..."
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                />

            <RadioButton
                android:id="@+id/rb_D"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:button="@null"
                android:background="@null"
                android:drawableLeft="@drawable/button_select_in_exam"
                android:drawablePadding="5dp"
                android:text="..."
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                />


        </RadioGroup>




    </LinearLayout>


    <include

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_exam_bottom"
        />


</RelativeLayout>






</LinearLayout>


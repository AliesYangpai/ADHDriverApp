<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"

android:background="@color/white"
tools:context="com.adhdriver.work.ui.activity.driver.ReadLearnActivity">



<!--title-->
<include
    android:id="@+id/include_title_read_learn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    layout="@layout/title_bar_in_common_activity_right_img"/>

<!--点击下一步-->
<LinearLayout
    android:id="@+id/ll_common_read_finish"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/selector_orange_bottom_button_bg"
    android:gravity="center"
    android:orientation="horizontal"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/text_start_test"
        android:textColor="@color/white"
        android:textSize="15sp" />


</LinearLayout>



<ListView
    android:id="@+id/lv_learns"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_below="@id/include_title_read_learn"
    android:layout_above="@id/ll_common_read_finish"
    android:scrollbars="none"
    />
</RelativeLayout>
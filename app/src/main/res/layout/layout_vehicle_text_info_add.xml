<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp"

        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="车辆规格："
                android:gravity="center_vertical"
                android:textColor="@color/text_login"
                />


            <TextView
                android:id="@+id/tv_vehicle_brand_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:textColor="@color/text_login"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_all"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />



        <LinearLayout
            android:id="@+id/ll_vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >


            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="类型选择："
                android:textColor="@color/text_login" />


            <com.adhdriver.work.ui.widget.FlowRaduoGroup
                android:id="@+id/frg_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_vertical|right"

                />







        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_all"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="最大载重(kg)："
                android:gravity="center_vertical"
                android:textColor="@color/text_login"
                />



            <EditText
                android:id="@+id/et_max_load_capacity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/tv_max_load_capacity_text"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输最大载重量"
                android:inputType="numberDecimal"
                android:textColor="@color/text_login"
                android:textColorHint="@color/text_grays"
                android:textSize="15sp"

                />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_all"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="最大体积(m³)："
                android:gravity="center_vertical"
                android:textColor="@color/text_login"
                />


            <EditText
                android:id="@+id/et_max_volume"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/tv_max_volume_text"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输最大载体积"
                android:inputType="numberDecimal"
                android:textColor="@color/text_login"
                android:textColorHint="@color/text_grays"
                android:textSize="15sp"


                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_all"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="车牌号码："
                android:gravity="center_vertical"
                android:textColor="@color/text_login"
                />


            <TextView
                android:id="@+id/tv_vehicle_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:textColor="@color/text_login"
                />

        </LinearLayout>





    </LinearLayout>

</LinearLayout>
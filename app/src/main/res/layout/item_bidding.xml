<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >







    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:stateListAnimator="@drawable/lift_on_touch"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:id="@+id/ll_order_com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"

            >


            <RelativeLayout
                android:id="@+id/rl_order_num"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_order_num_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="订单编号:"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    />


                <TextView
                    android:id="@+id/tv_order_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="62101201156922KJJK"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_toRightOf="@id/tv_order_num_text"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/tv_is_first_award"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:text="首单奖励"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:padding="2dp"
                    android:textSize="12sp"
                    android:background="@drawable/boder_the_fist_award_taked"
                    android:visibility="gone"
                    />


            </RelativeLayout>

            <View
                android:id="@+id/view_line_1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/rl_order_num"
                android:background="@color/bg_all" />


            <LinearLayout
                android:id="@+id/ll_fromAndTo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/view_line_1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_start_place"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="2"
                    android:text="西爱上大阿斯"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/img_send_to" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_destination"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="2"
                    android:maxWidth="140dp"
                    android:text="山西省自行车"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>


            <!--货物名称-->
            <RelativeLayout
                android:id="@+id/rl_goods_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_fromAndTo"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="货物名称:"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_good_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:maxWidth="140dp"
                    android:text="一点点棉花贼贼爱"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </RelativeLayout>




            <RelativeLayout

                android:id="@+id/rl_bidding_participate_bottom_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_goods_content"
                android:layout_marginBottom="10dp"
                >

            <!--货运方式-->
            <RelativeLayout
                android:id="@+id/rl_trans_way"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="货运方式:"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_trans_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:maxWidth="140dp"
                    android:text="顺风车"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </RelativeLayout>


            <!--货物重量-->
            <RelativeLayout
                android:id="@+id/rl_goods_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_trans_way"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="货物重量:"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_goods_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:maxWidth="140dp"
                    android:text="500kg"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="16sp" />


            </RelativeLayout>





            <!--货物体积-->
            <RelativeLayout
                android:id="@+id/rl_goods_volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_goods_weight"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="货物体积:"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_goods_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:maxWidth="140dp"
                    android:text="52m³"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="16sp" />


            </RelativeLayout>



            <TextView
                android:id="@+id/tv_order_bidding"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="27dp"
                android:background="@drawable/selector_circle_button"
                android:gravity="center"
                android:text="竞"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />




            </RelativeLayout>



        </RelativeLayout>

    </android.support.v7.widget.CardView>




















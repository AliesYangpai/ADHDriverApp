<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp"

        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="车辆规格："
                android:gravity="center_vertical"
                android:textColor="@color/text_login"
                />


            <TextView
                android:id="@+id/tv_vehicle_brand_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:textColor="@color/text_login"
                android:text="金杯阿斯顿卡洛斯控件的"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_all"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />



        <LinearLayout
            android:id="@+id/ll_vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >


            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="类型选择："
                android:textColor="@color/text_login"
                />


            <TextView
                android:id="@+id/tv_vehicle_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:textColor="@color/text_login"
                />







        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_all"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="最大载重(kg)："
                android:gravity="center_vertical"
                android:textColor="@color/text_login"

                />



            <TextView
                android:id="@+id/tv_vehicle_max_capacity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:textColor="@color/text_login"
                android:text="..."
                />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_all"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="最大体积(m³)："
                android:gravity="center_vertical"
                android:textColor="@color/text_login"

                />


            <TextView
                android:id="@+id/tv_vehicle_max_volume"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:textColor="@color/text_login"
                android:text="..."
                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_all"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="车牌号码："
                android:gravity="center_vertical"
                android:textColor="@color/text_login"
                />


            <TextView
                android:id="@+id/tv_vehicle_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:textColor="@color/text_login"
                android:text="..."
                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_all"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <RelativeLayout
            android:id="@+id/rl_vechcle_state"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="审核状态："
                android:gravity="center_vertical"
                android:textColor="@color/text_login"
                />


            <TextView
                android:id="@+id/tv_vehicle_state"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="3dp"
                android:textSize="11sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />


            <ImageView
                android:id="@+id/iv_vehicle_property"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/img_business_vehicle_logo"
                android:layout_marginLeft="20dp"
                android:visibility="gone"

                />


        </RelativeLayout>



    </LinearLayout>

</LinearLayout>
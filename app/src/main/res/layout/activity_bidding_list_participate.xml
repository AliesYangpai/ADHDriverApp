<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_all"
    tools:context="com.adhdriver.work.activity.driver.BiddingParticipateListActivity">


    <!--title-->

    <include
        android:id="@+id/include_title_bidding_partifcipate_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/common_title_in_activity"/>



    <!--下拉刷新布局-->
    <com.adhdriver.work.widget.pullfresh.PullToRefreshLayout
        android:id="@+id/refresh_Layout_in_bidding_participate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include_title_bidding_partifcipate_list"
        >

        <include
            android:id="@+id/include_refresh_head"
            layout="@layout/refresh_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <com.adhdriver.work.widget.pullfresh.PullableListViewUpAndDown
            android:id="@+id/lv_bidding_participate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            />




        <include layout="@layout/load_more" />



    </com.adhdriver.work.widget.pullfresh.PullToRefreshLayout>


</RelativeLayout>

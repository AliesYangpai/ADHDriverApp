                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    android:text="..."
                    android:textColor="@color/gray_color"
                    android:textSize="15sp"

                    />


            </LinearLayout>




        </LinearLayout>



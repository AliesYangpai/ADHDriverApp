<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:stateListAnimator="@drawable/lift_on_touch"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:id="@+id/ll_order_com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            >


            <RelativeLayout
                android:id="@+id/rl_top_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <!--左边-->

                <LinearLayout
                    android:id="@+id/ll_left"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_user_head"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="5dp"
                        android:src="@drawable/img_default_client_head" />


                    <TextView
                        android:id="@+id/tv_client_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="刘查理"
                        android:textColor="@color/text_login"

                        />

                </LinearLayout>





                <ImageView
                    android:id="@+id/iv_is_first_award"
                    android:layout_width="15dp"
                    android:layout_height="60dp"
                    android:src="@drawable/img_is_first_reward"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible"

                    />

                <!--右边-->


                <LinearLayout
                    android:id="@+id/ll_right"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_toLeftOf="@id/iv_is_first_award"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginRight="3dp"
                    >


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >




                        <ImageView
                            android:id="@+id/iv_fullLoad_quickOrder"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="2dp"
                            />


                        <ImageView
                            android:id="@+id/iv_order_type"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/img_tip_city_wide" />

                    </LinearLayout>

                    <!--<ImageView-->
                        <!--android:id="@+id/iv_order_type"-->
                        <!--android:layout_width="40dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:layout_gravity="center_horizontal"-->
                        <!--android:src="@drawable/img_tip_city_wide" />-->


                    <TextView
                        android:id="@+id/tv_do_call_shipper"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="bottom|right"
                        android:background="@drawable/img_do_call_in_get_order"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />


                </LinearLayout>





                <!--中间-->
                <LinearLayout
                    android:id="@+id/ll_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ll_right"
                    android:layout_toRightOf="@+id/ll_left"
                    android:gravity="center_vertical"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/img_start_spot"
                                android:layout_marginRight="1dp"
                                />

                            <TextView
                                android:id="@+id/tv_start_place"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="西安市"
                                android:textColor="@color/gray_deep_one"
                                android:textSize="17sp" />
                        </LinearLayout>






                        <TextView
                            android:id="@+id/tv_start_place_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="西安市雁塔区雁翔广场"
                            android:textColor="@color/gray_one"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/img_destination_spot"
                                android:layout_marginRight="1dp"
                                />

                            <TextView
                                android:id="@+id/tv_destination"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textColor="@color/gray_deep_one"
                                android:text="宝鸡市"
                                android:singleLine="true"
                                android:textSize="17sp"
                                />

                        </LinearLayout>



                        <TextView
                            android:id="@+id/tv_destination_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="西安市雁塔区雁翔广场爱上了啊实打实大"
                            android:textColor="@color/gray_one"
                            android:textSize="12sp" />

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>


            <View
                android:id="@+id/view_line_item"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/rl_top_item"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/img_view_imaginary_line"

                />


            <RelativeLayout
                android:id="@+id/rl_bottom_item"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/view_line_item"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">


                <TextView
                    android:id="@+id/tv_vehicle_name_comebine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="大货车"
                    android:textColor="@color/bar_blue" />





                <TextView
                    android:id="@+id/tv_good_name"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_vehicle_name_comebine"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="大西瓜爱上啊实打实大"
                    android:textColor="@color/green_one"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/tv_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="38.8元"
                    android:textColor="@color/green_one"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:visibility="visible"

                    />


            </RelativeLayout>






        </RelativeLayout>








    </android.support.v7.widget.CardView>



    <!--<ImageView-->
        <!--android:id="@+id/iv_is_first_award"-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/img_is_first_reward"-->
        <!--android:layout_marginRight="3dp"-->
        <!--android:layout_gravity="right"-->

        <!--/>-->

</LinearLayout>


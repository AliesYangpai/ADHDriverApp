<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">






    <RelativeLayout
        android:id="@+id/ll_order_com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >





        <!--上面-->
        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"

            >

            <!--左边头像、评分相关-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                >


                <ImageView
                    android:id="@+id/iv_user_head"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/img_default_client_head_round"
                    />
                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="张三风"
                    android:textColor="@color/gray6"
                    android:layout_marginLeft="1dp"
                    android:singleLine="true"
                    />



            </LinearLayout>

            <!--右边信息-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                >



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_bidding_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"

                        >





                        <TextView
                            android:id="@+id/tv_car_lenth"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="8.2m"
                            android:textColor="@color/orange1"
                            />


                        <TextView
                            android:id="@+id/tv_catogry"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="高栏"
                            android:textColor="@color/orange1"
                            android:layout_marginLeft="30dp"
                            android:singleLine="true"
                            />



                    </LinearLayout>


                </RelativeLayout>



                <com.adhdriver.work.ui.widget.tagview.TagView
                    android:id="@+id/tagview_sgin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:lineMargin="5dp"
                    app:tagMargin="3dp"
                    app:textPaddingBottom="3dp"
                    app:textPaddingLeft="5dp"
                    app:textPaddingRight="5dp"
                    app:textPaddingTop="3dp"
                    android:clickable="false"
                    ></com.adhdriver.work.ui.widget.tagview.TagView>




            </LinearLayout>




        </LinearLayout>




    </RelativeLayout>

</LinearLayout>
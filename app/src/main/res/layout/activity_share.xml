<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.adhdriver.work.activity.ShareActivity">


    <!--title-->

    <include
        android:id="@+id/include_title_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/common_title_in_share_activity"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_below="@id/include_title_share"
        android:background="@drawable/img_share_bg"
        >


        <ImageView
            android:id="@+id/iv_share_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/img_share_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            />

        <LinearLayout
            android:id="@+id/ll_invite_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_below="@id/iv_share_pic"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:background="@drawable/boder_share_code_line"
            >
            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="邀请码"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/tv_invite_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="...."
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white"
                />

        </LinearLayout>






        <TextView
            android:id="@+id/tv_share_to_friend"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="马上分享，邀请好友"
            android:gravity="center"
            android:layout_below="@id/ll_invite_code"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="14sp"
            android:textColor="@color/text_login"
            android:background="@drawable/img_share_bottom_bg"
            />









    </RelativeLayout>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgGray"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/tv_login_role_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="请选择角色"
            android:gravity="center"
            android:textColor="@color/text_bule"
            android:background="@color/white"
            android:textStyle="bold"
            />

        <!--司机角色-->
        <RelativeLayout
            android:id="@+id/rl_login_role_driver"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_marginTop="3dp"
            >




            <TextView
                android:id="@+id/tv_role_driver"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="@string/role_of_driver"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"
                android:textStyle="bold"
                />


            <ImageView
                android:id="@+id/iv_role_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_role_driver"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_role_driver"
                />
        </RelativeLayout>

        <!--企业角色-->
        <RelativeLayout
            android:id="@+id/rl_login_role_firm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_marginTop="0.5dp"

            >




            <TextView
                android:id="@+id/tv_role_firm"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="@string/role_of_business"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"
                android:textStyle="bold"
                />


            <ImageView
                android:id="@+id/iv_tv_role_firm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_role_business"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_role_firm"
                />
        </RelativeLayout>






    </LinearLayout>

</LinearLayout>
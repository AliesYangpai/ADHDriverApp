<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/bg_all"
tools:context="com.adhdriver.work.ui.activity.driver.VehicleEditActivity">



<!--title-->

<include
    android:id="@+id/include_title_my_driver_vehicle_edit"
    layout="@layout/title_bar_in_common_activity_right_img"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />



    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/selector_orange_right_angle_bg"
        android:layout_alignParentBottom="true"

        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/text_submit"
            />

    </LinearLayout>


<ScrollView
    android:id="@+id/sv_info_reg_common"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/include_title_my_driver_vehicle_edit"
    android:layout_above="@id/ll_bottom"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <!--车辆文字属性-->

        <include
            android:id="@+id/include_my_driver_vehicle_detial_text"
            layout="@layout/layout_vehicle_text_info_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <include
            android:id="@+id/include_my_driver_vehicle_detial_pic"
            layout="@layout/layout_vehicle_pictures_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
     />

    </LinearLayout>


</ScrollView>


</RelativeLayout>

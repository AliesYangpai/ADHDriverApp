<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Star="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:stateListAnimator="@drawable/lift_on_touch"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:id="@+id/ll_order_com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >



            <!--上面-->
            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                >

                <!--左边头像、评分相关-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    >


                    <ImageView
                        android:id="@+id/iv_userHead"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/img_default_client_head_round"
                        />
                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="张三风"
                        android:textColor="@color/gray6"
                        android:layout_marginLeft="1dp"
                        android:singleLine="true"
                        />



                </LinearLayout>

                <!--右边信息-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    >



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll_bidding_about"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:visibility="visible"
                            >





                            <TextView
                                android:id="@+id/tv_car_lenth"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="8.2m"
                                android:textColor="@color/orange1"
                                />


                            <TextView
                                android:id="@+id/tv_catogry"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="高栏"
                                android:textColor="@color/orange1"
                                android:layout_marginLeft="30dp"
                                android:singleLine="true"
                                />

                            <TextView
                                android:id="@+id/tv_goods_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="200吨"
                                android:textColor="@color/orange1"
                                android:layout_marginLeft="30dp"
                                android:singleLine="true"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_over_office_about"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:visibility="gone"
                            >


                            <TextView
                                android:id="@+id/tv_over_office_goods_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="1000kg"
                                android:textColor="@color/orange1" />


                            <TextView
                                android:id="@+id/tv_over_office_goods_volume"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="2m³"
                                android:textColor="@color/orange1"
                                android:layout_marginLeft="30dp"
                                android:singleLine="true"
                                />

                            <TextView
                                android:id="@+id/tv_goods_over_office_fee"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="2633元"
                                android:textColor="@color/red"
                                android:layout_marginLeft="30dp"
                                android:singleLine="true"
                                />

                        </LinearLayout>

                    </RelativeLayout>



                    <com.adhdriver.work.ui.widget.tagview.TagView
                        android:id="@+id/tagview_sgin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:lineMargin="5dp"
                        app:tagMargin="3dp"
                        app:textPaddingBottom="3dp"
                        app:textPaddingLeft="5dp"
                        app:textPaddingRight="5dp"
                        app:textPaddingTop="3dp"
                        android:clickable="false"
                        ></com.adhdriver.work.ui.widget.tagview.TagView>













                </LinearLayout>




            </LinearLayout>


            <View
                android:id="@+id/view_line_center"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grayline1"
                android:layout_below="@id/ll_top"
                />

            <!--下面-->
            <RelativeLayout
                android:id="@+id/rl_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_line_center"

                >




                <!--下右边竞价或者价格-->



                <RelativeLayout
                    android:id="@+id/rl_bottom_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"

                    >

                    <ImageView
                        android:id="@+id/iv_bidding"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/img_bidding_normal"
                        />


                    <ImageView
                        android:id="@+id/iv_grab"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/img_grab_down"
                        />





                </RelativeLayout>





                <!--下左边地点信息-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@id/rl_bottom_right"
                    android:layout_marginRight="7dp"
                    >


                    <!--起点-->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/img_start_spot"
                            />

                        <TextView
                            android:id="@+id/tv_start_place"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textColor="@color/gray7"
                            android:text="陕西省西安市莲曲曲啊是的的客户奥斯"
                            android:singleLine="true"
                            android:layout_marginLeft="7dp"
                            android:textSize="16sp"
                            />


                    </LinearLayout>

                    <!--终点-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/img_destination_spot"
                            />

                        <TextView
                            android:id="@+id/tv_destination_place"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textColor="@color/gray7"
                            android:text="陕西省西安市莲曲曲啊是的啊收到了空间奥斯"
                            android:singleLine="true"
                            android:layout_marginLeft="7dp"
                            android:textSize="16sp"
                            />


                    </LinearLayout>



                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
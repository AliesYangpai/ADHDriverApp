<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray8"
    tools:context="com.adhdriver.work.ui.activity.driver.DriverCreditScoreActivity">

    <!--title-->
    <include
        android:id="@+id/include_title_credit_score"
        layout="@layout/title_bar_in_common_activity_right_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_below="@id/include_title_credit_score"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >


            <include
                android:id="@+id/include_credit_score_top"
                layout="@layout/layout_credit_score_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom = "10dp"
                />



            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray1"
                android:layout_marginTop="10dp"
                />



            <include
                android:id="@+id/include_credit_score_top"
                layout="@layout/layout_credit_score_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                />



            <include
                android:id="@+id/include_credit_score_bottom"
                layout="@layout/layout_credit_score_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom = "10dp"
                />




        </LinearLayout>

    </ScrollView>






</RelativeLayout>

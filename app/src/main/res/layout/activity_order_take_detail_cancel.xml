<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context="com.adhdriver.work.ui.activity.driver.OrderTakeDetailCancelActivity">










<!--title-->
<include
    android:id="@+id/include_title_main"
    layout="@layout/title_bar_in_common_activity_right_img"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />




<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:layout_below = "@id/include_title_main"
    android:layout_above="@+id/include_order_info_bottom_button"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >


        <include
            android:id="@+id/include_client_info_first"
            layout="@layout/layout_order_info_client_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />



        <View
            android:id="@+id/view_line_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grayline1"
            android:layout_below="@id/include_client_info_first"
            />



        <include
            android:id="@+id/include_goods_info_second"
            layout="@layout/layout_order_info_time_goods_no_price_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below = "@id/view_line_1"
            />


        <View
            android:id="@+id/view_line_2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grayline1"
            android:layout_below="@id/include_goods_info_second"
            />




        <include
            android:id="@+id/include_pay_side"
            layout="@layout/layout_order_info_pay_side"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_line_2"
            />



        <View
            android:id="@+id/view_line_3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grayline1"
            android:layout_below="@id/include_pay_side"
            />



        <include
            android:id="@+id/include_pass_point_third"
            layout="@layout/layout_order_info_pass_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below = "@id/view_line_3"
            />



        <View
            android:id="@+id/view_line_4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grayline1"
            android:layout_below="@id/include_pass_point_third"
            />


        <include
            android:id="@+id/include_extra_service_fourth"
            layout="@layout/layout_order_info_extra_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_line_3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </LinearLayout>
</ScrollView>







</RelativeLayout>





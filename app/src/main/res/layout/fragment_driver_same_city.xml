<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_main_above"
    tools:context="com.adhdriver.work.ui.fragment.driver.main3.FragmentDriverSameCity">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >






        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/srefresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <!--上-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tv_order_recive_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:singleLine="true"
                            />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="今日接单"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tv_order_recive_income"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:singleLine="true"
                            />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="今日收入"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </LinearLayout>



                </LinearLayout>


                <!--下-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <com.adhdriver.work.ui.widget.circle.WaitOrderProgress
                        android:id="@+id/wp_cirlce"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"

                        >


                    </com.adhdriver.work.ui.widget.circle.WaitOrderProgress>

                </LinearLayout>




            </LinearLayout>




        </android.support.v4.widget.SwipeRefreshLayout>




    </RelativeLayout>










</RelativeLayout>
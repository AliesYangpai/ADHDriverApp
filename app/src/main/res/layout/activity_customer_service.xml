            <!--android:textSize="15sp"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:gravity="center_vertical|right"-->


            <!--/>-->


    </RelativeLayout>

    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        >
    <!--微信公众号-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        >


        <TextView
            android:id="@+id/tv_wx_text"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:text="微信公众号"
            android:textColor="@color/text_login" />



        <LinearLayout
            android:id="@+id/ll_wx_gzh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_wx_text"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:layout_alignParentRight="true"
            >




            <TextView
                android:id="@+id/tv_wx_gzh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@null"
                android:textColor="@color/text_login"
                android:text="@string/adh_wx_gzh_name"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|right"

                />




            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/img_wx_gzh_qz"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_wx_gzh"
                android:layout_centerVertical="true"
                />



        </LinearLayout>



        <!--<TextView-->
            <!--android:id="@+id/tv_wx_gzh"-->
            <!--android:layout_width="match_parent"-->

            <!--/>-->


    </RelativeLayout>


    <!--分割线-->

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/bg_all"
        android:visibility="gone"
        />


    <!--新浪微博-->
    <RelativeLayout
        android:id="@+id/rl_sina_wb"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <TextView
            android:id="@+id/tv_sina_wb_text"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:text="新浪微博"
            android:textColor="@color/text_login" />


        <LinearLayout
            android:id="@+id/ll_sina_wb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_sina_wb_text"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:layout_alignParentRight="true"
            >




            <TextView
                android:id="@+id/tv_sina_wb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@null"
                android:textColor="@color/text_login"
                android:text="@string/adh_wx_gzh_name"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|right"
                />




            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/img_sina_icon_adh"
                android:layout_marginLeft="10dp"

                />



        </LinearLayout>







    </RelativeLayout>

    <!--分割线-->

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/bg_all" />

    <!--联系地址-->

    <RelativeLayout
        android:id="@+id/rl_contact_address"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <TextView
            android:id="@+id/tv_contact_address_text"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:gravity="center_vertical"
            android:text="联系地址"
            android:textColor="@color/text_login" />


        <TextView
            android:id="@+id/tv_contact_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_contact_address_text"
            android:background="@null"
            android:textColor="@color/text_login"
            android:text="@string/adh_address"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"


            />


    </RelativeLayout>

    </LinearLayout>

</LinearLayout>

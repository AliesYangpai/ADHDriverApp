<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_all"
    tools:context="com.adhdriver.work.ui.activity.driver.DepositPassForgetToResetActivity">


    <!--title-->
    <include
        android:id="@+id/include_title_forget_to_set_draw_pass"
        layout="@layout/title_bar_in_common_activity_right_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/ll_set_identify_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include_title_forget_to_set_draw_pass"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"

        >

        <TextView

            android:id="@+id/tv_set_identify_id"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="身份证号码后4位："
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"

            />

        <com.jungly.gridpasswordview.GridPasswordView


            android:id="@+id/gpv_set_identify_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:gpvGridColor="#ffffff"
            app:gpvLineColor="@color/gray_color"
            app:gpvLineWidth="1dp"
            app:gpvPasswordLength="4"
            app:gpvPasswordType="textVisiblePassword"
            app:gpvTextColor="@color/black"
            app:gpvTextSize="17sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_set_withdraw_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_set_identify_id"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"

        >

        <TextView

            android:id="@+id/tv_set_first"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="新密码："
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"

            />

        <com.jungly.gridpasswordview.GridPasswordView


            android:id="@+id/gpv_forget_to_set_withdraw_pass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:gpvGridColor="#ffffff"
            app:gpvLineColor="@color/gray_color"
            app:gpvLineWidth="1dp"
            app:gpvPasswordLength="6"
            app:gpvPasswordType="numberPassword"
            app:gpvTextColor="@color/black"
            app:gpvTextSize="17sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_set_withdraw_pass_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_set_withdraw_pass"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/tv_set_second"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="密码确认："
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"

            />

        <com.jungly.gridpasswordview.GridPasswordView


            android:id="@+id/gpv_forget_to_set_withdraw_pass_again"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:gpvGridColor="#ffffff"
            app:gpvLineColor="@color/gray_color"
            app:gpvLineWidth="1dp"
            app:gpvPasswordLength="6"
            app:gpvPasswordType="numberPassword"

            app:gpvTextColor="@color/black"
            app:gpvTextSize="17sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_forget_to_set_withdraw_pass_finish"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"

        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_orange_bottom_button_bg"
        android:gravity="center"
        android:text="@string/text_finish"
        android:textColor="@color/white"
        android:textSize="15sp"

        />


</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="5dp"

        >


        <!--车辆属性：车牌、车型、最大载重、最大体积-->

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                >
                <!--车牌号-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="车牌号码："
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/black_text"
                        />
                    <TextView
                        android:id="@+id/tv_vehicle_no"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="陕A69585"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/black_text"
                        />



                </LinearLayout>


                <!--车辆规格-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="车辆规格："
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/black_text"
                        />
                    <TextView
                        android:id="@+id/tv_vehicle_brand"
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:text="3.6m平板"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:textColor="@color/black_text"
                        />



                </LinearLayout>


                <!--车型-->
                <LinearLayout
                    android:id="@+id/ll_vehicle_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="车辆类型："
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/black_text"
                        />
                    <TextView
                        android:id="@+id/tv_vehicle_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="7.6米箱车"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/black_text"
                        />



                </LinearLayout>

                <!--最大载重-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="最大载重："
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/black_text"
                        />
                    <TextView
                        android:id="@+id/tv_vehicle_max_capacity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="8吨"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/black_text"
                        />



                </LinearLayout>
                <!--最大体积-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="最大体积："
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/black_text"
                        />
                    <TextView
                        android:id="@+id/tv_vehicle_max_volume"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="30立方米"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/black_text"
                        />



                </LinearLayout>



            </LinearLayout>

            <ImageView
                android:id="@+id/iv_current_logon_vehicle"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/img_current_logon_vehicle"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                />

        </FrameLayout>

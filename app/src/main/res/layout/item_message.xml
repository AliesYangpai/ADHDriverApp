<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
    
        
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/tv_aidaihuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adh_text"
                android:textColor="@color/black_text"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                />

            <View
                android:id="@+id/view_line_1"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/black_text"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_toRightOf="@id/tv_aidaihuo"
                android:layout_centerVertical="true"
                />


            <TextView
                android:id="@+id/tv_msg_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服"
                android:textColor="@color/text_login"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/view_line_1"
                android:layout_centerVertical="true"
                />



            <TextView
                android:id="@+id/tv_msg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-06"
                android:textColor="@color/text_login"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />



        </RelativeLayout>


        <TextView
            android:id="@+id/tv_msg_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/text_login"
            android:layout_marginLeft="30dp"
            android:text="@string/publish_alert"
            android:textSize="13sp"
            />
        



    </LinearLayout>

    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
</LinearLayout>